@using EntityLayer.Concrete
@model List<Notification>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <h6 class="p-3 mb-0">Bildirimler</h6>
    @foreach (var item in Model)
    {
        @if (@item.NotificationStatus == true)
        {
            <div class="dropdown-divider"></div>
            <a class="dropdown-item preview-item">
                <div class="preview-thumbnail">
                <div class="@item.NotificationColor">
                    <i class="@item.NotificationTypeSymbol"></i>
                </div>
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject font-weight-normal mb-1">@item.NotificationType</h6>
                <p class="text-gray ellipsis mb-0"> @item.NotificationDetails </p>

                    @{
                        var date =(DateTime.Now - item.NotificationDate);
                        if (date.Days >= 1)
                        {
                            <p class="text-gray mb-0">@date.Days Gün Önce</p>
                        }
                        if (date.Hours >= 1)
                        {
                            <p class="text-gray mb-0">@date.Hours Saat Önce</p>
                        }
                        if (date.Minutes>=1 && date.Hours<1 && date.Days<1)
                        {
                            <p class="text-gray mb-0">@date.Minutes Dakika Önce</p>
                        }

                    }
                
            </div>
        </a>
        }
    }

    <div class="dropdown-divider"></div>
    <h6 class="p-3 mb-0 text-center">Tüm Bildirimleri Gör</h6>
</div>