@model CoreDemo.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
                    @Html.HiddenFor(x=>x.WriterID,new {@class="form-control"})
                    
                      <div class="form-group">
                        <label for="exampleInputName1">Ad Soyad</label>
                        @Html.TextBoxFor(x=>x.WriterName,new {@class="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterName,"",new {@class="text-danger"})
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail3">Email</label>
                        @Html.TextBoxFor(x=>x.WriterMail,new {@class="form-control"})
                         @Html.ValidationMessageFor(x=>x.WriterMail,"",new {@class="text-danger"})

                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @Html.PasswordFor(x=>x.WriterPassword,new {@class="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterPassword,"",new {@class="text-danger"})
                      </div>
                        <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                            @Html.Password("Password2","",new {@class="form-control"})
                            <span id="sifretekrar"></span>
                      </div>

                      <div class="form-group">
                        <label>Profil resmi</label>
                        <input type="file" name="WriterImage" />
                      </div>

                      <div class="form-group">
                        <label for="exampleTextarea1">Hakkımda</label>
                        @Html.TextAreaFor(x=>x.WriterAbout,10,3,new {@class="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterAbout,"",new {@class="text-danger"})
                      </div>
                      <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                      <button class="btn btn-light">İptal</button>
                  </div>
                </div>
              </div>


</form>
    <script>
        $('#btn1').click(function(){
            swal("Site kabul şartları","Sitemizde verdiğiniz mail adresi üzerinden bilgi ve haber epostaları spam ölçüsüne varmadan gönderilmeye devam edilecektir.");
        })

        $("#Password2").keyup(()=>{
           let pass = $("#WriterPassword").val();
            if(pass !== $("#Password2").val()){
                $("#sifretekrar").text("Şifreleriniz Eşleşmedi");
                $("#sifretekrar").addClass("text-danger");
            }else{
                $("#sifretekrar").text("✓ Şifreleriniz Eşleşti");
                $("#sifretekrar").removeClass("text-danger");
                $("#sifretekrar").addClass("text-success");
            }
        })
    </script>